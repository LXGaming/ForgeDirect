{
    "manifest_version": 2,
    "name": "ForgeDirect",
    "version": "1.1.0",
    "description": "Directly download files from MinecraftForge",
    "icons": {
        "16": "./images/icon16.png",
        "48": "./images/icon48.png",
        "128": "./images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "./images/icon16.png",
            "24": "./images/icon24.png",
            "32": "./images/icon32.png"
        },
        "default_popup": "popup.html"
    },
    "author": "LX_Gaming",
    "content_scripts": [
        {
            "matches": ["*://files.minecraftforge.net/*"],
            "js": ["./scripts/script.js"]
        }
    ],
    "homepage_url": "https://lxgaming.github.io/"
}